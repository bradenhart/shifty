<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Toolbar styles -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/text_white</item>
    </style>

    <!-- this is causing the popup menu to change color, this is the style for the overflow menu -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">#34495e</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TimeScrollerTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/timeScrollerTextViewHeight</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/timeScrollerTextViewPadding</item>
        <item name="android:textColor">@color/text_off_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomAccentOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

</resources>
