<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.bradenhart.shifty.activity.ShiftViewActivity">

    <include
        android:id="@+id/appbar_main"
        layout="@layout/view_toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_shift_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/layout_fabs_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center_horizontal"
            android:layout_marginBottom="14dp"
            android:clickable="false">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/button_load_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_more_vert_white_24dp"
                android:visibility="gone"
                app:fabSize="normal" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/button_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_clear_all_white_24dp"
                android:visibility="gone"
                app:backgroundTint="#e53935"
                app:fabSize="normal" />

        </LinearLayout>

        <!-- e53935 -->

    </FrameLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="horizontal">

            <!--<ImageButton-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:background="?attr/selectableItemBackgroundBorderless"-->
            <!--android:tint="@color/colorPrimary" />-->

            <ImageButton
                android:id="@+id/button_select_weeks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_date_black_24dp"
                android:tint="@color/text_off_white" />

            <ImageButton
                android:id="@+id/button_new_shift"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_add_black_24dp"
                android:tint="@color/text_off_white" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>